<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder" inherit_id="sale.report_saleorder">
            <xpath expr="." position="replace">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="header">
                            <table class="table table-borderless">
                                <tr>
                                    <td>
                                        <img class="mr4 float-right o_portal_contact_img" t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 120px; max-width: 180px;" alt="Logo"/>
                                    </td>
                                    <td>
                                        <strong><t t-esc="doc.company_id.name"/></strong><br/>
                                        <t t-esc="doc.company_id.street"/><br/>
                                        <t t-if="doc.company_id-street2">
                                            <t t-esc="doc.company_id.street2"/><br/>
                                        </t>
                                        ,<t t-esc="doc.company_id.city"/> Estado <t t-esc="doc.company_id.state_id.name"/><br/>
                                        <t t-esc="doc.company_id.phone"/><br/>
                                        <t t-esc="doc.company_id.email"/><br/>
                                        <!-- <span style="font-size: 13px; font-family: sans-serif">Dirección: <t t-esc="doc.company_id.display_address_ext()"/></span> -->
                                    </td>
                                    <td>
                                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                            <strong><span style="color: black;" t-if="doc.state not in ['draft','sent']">Pedido # </span></strong>
                                            <strong><span style="color: black;" t-if="doc.state in ['draft','sent']">Cotización # </span></strong>
                                        </t>
                                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                            <strong><span style="color: black;" >Pro-Forma Factura # </span></strong>
                                        </t>
                                        <br/>
                                        <strong><span style="color: red;" t-field="doc.name"/></strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="page">
                            <table class="table table-borderless">
                                <tr>
                                    <td>
                                      Nombre o Razon Social:<br/>
                                      Dirección:<br/>
                                      Telefono:<br/>
                                    </td>
                                    <td>
                                      RIF:<br/>
                                      EMISION:<br/>
                                      VENCIMIENTO:<br/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th name="th_description" class="text-left">Código</th>
                                        <th name="th_quantity" class="text-right">Descripción</th>
                                        <th name="th_priceunit" class="text-right">Marca</th>
                                        <th name="th_priceunit" class="text-right">Cant.</th>
                                        <th name="th_priceunit" class="text-right">Precio Unitario</th>
                                        <th name="th_priceunit" class="text-right">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-foreach="doc.order_line" t-as="line">
                                        <tr>
                                            <td>
                                                Código
                                            </td>
                                            <td>
                                                Descripción
                                            </td>
                                            <td>
                                                Marca
                                            </td>
                                            <td>
                                                Cantidad
                                            </td>
                                            <td>
                                                Precio
                                            </td>
                                            <td>
                                                Subtotal
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
